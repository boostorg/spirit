        ;

    test-suite "spirit.small_bug_fixes"
        : [ spirit-run $(spirit-src)bug_fixes.cpp <template>normal ]
        ;

    actor_test_sources =
        action_tests
        assign_test
        assign_key_test
        clear_test
        decrement_test
        erase_at_test
        increment_test
        insert_key_test
        insert_at_test
